link(rel="stylesheet", href="/stylesheets/cart.css")

block content
  h1 Your Cart

  if !cart || cart.length === 0
    p Your cart is empty.
  else
    ul.cart-list
      each item in cart
        li.cart-item
          .cart-item-details
            h3= item.name
            p Unit Price: ₹#{item.price}
          .cart-item-quantity
            form(method="POST" action=`/cart/update/${item.id}`)
              input(type="number", name="quantity", value=item.quantity, min="1")
              button(type="submit") Update
          .cart-item-price ₹#{item.price * item.quantity}

    p.total-bill Total: ₹#{cart.reduce((total, item) => total + (item.price * item.quantity), 0)}

    form(action="/cart/checkout", method="POST")
      button(type="submit") Proceed to Checkout
