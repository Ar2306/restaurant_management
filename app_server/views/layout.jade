doctype html
html
  head
    title Restaurant Website
    meta(charset='utf-8')
    meta(name='viewport', content='width=device-width, initial-scale=1')
    
    // CSS Stylesheets
    link(rel='stylesheet', href='/stylesheets/home.css')
    link(rel='stylesheet', href='/stylesheets/blog.css')
    link(rel="stylesheet", href="/stylesheets/menu.css")
    link(rel="stylesheet", href="/stylesheets/book-table.css")
    link(rel="stylesheet", href="/stylesheets/cart.css")
    link(rel='stylesheet', href='https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/css/bootstrap.min.css')
    link(rel='stylesheet', href='https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.15.3/css/all.min.css')


  body
    if page == 'home'
      header
        nav.navbar.navbar-expand-lg.navbar-dark
          a.navbar-brand(href='/') Restro
          
          // Toggler button for small screens
          button.navbar-toggler(type='button', data-toggle='collapse', data-target='#navbarNav', aria-controls='navbarNav', aria-expanded='false', aria-label='Toggle navigation')
            span.navbar-toggler-icon
            
          // Navigation links
          .collapse.navbar-collapse#navbarNav
            ul.navbar-nav.ml-auto
              li.nav-item
                a.nav-link(href='/') Home
              li.nav-item
                a.nav-link(href='/menu') Menu
              li.nav-item
                a.nav-link(href='/blog') Blog
              li.nav-item
                a.nav-link(href='/about') About
              li.nav-item
                a.nav-link(href='/contact') Contact
              li.nav-item
                a.nav-link(href='/signin') Sign In

              // Cart Icon with Badge
              li.nav-item
                a.nav-link(href='/cart')
                  i.fa.fa-shopping-cart
                  // Dynamic item count
                  span#cart-count.badge.badge-warning 5

    block content

    // JavaScript includes
    script(src='https://code.jquery.com/jquery-3.5.1.slim.min.js')
    script(src='https://cdn.jsdelivr.net/npm/@popperjs/core@2.0.11/dist/umd/popper.min.js')
    script(src='https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/js/bootstrap.min.js')
    script(src='/javascripts/app.js')
