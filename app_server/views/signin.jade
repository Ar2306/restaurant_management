link(rel="stylesheet", href="/stylesheets/signin.css")

block content
  .container-signin
    .card
      .card-header Sign In
      .card-body
        h2.welcome-message Welcome Back!
        p.welcome-subtext We missed you! Please sign in to continue.
        form(action="/signin", method="POST")
          .form-group
            label(for="email") Email
            input.form-control(type="email", name="email", placeholder="Your Email", required)
          .form-group
            label(for="password") Password
            input.form-control(type="password", name="password", placeholder="Password", required)
          button.btn.btn-primary(type="submit") Sign In
        p Don't have an account? 
          a(href="/signup") Create an Account
