extends layout

block content
  .container
    .row.justify-content-center
      .col-md-6
        .card.mt-5
          .card-header.text-center
            h3 Create Account
          .card-body
            form(method='POST', action='/signup-submit')
              .form-group
                label(for='username') username
                input#name.form-control(type='text', name='name', placeholder='Enter your name', required)
              .form-group
                label(for='email') Email address
                input#email.form-control(type='email', name='email', placeholder='Enter email', required)
              .form-group
                label(for='password') Password
                input#password.form-control(type='password', name='password', placeholder='Password', required)
              button.btn.btn-primary.btn-block(type='submit') Create Account
